<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_learning_home"
    tools:context="org.cssac.karyovirtualassistantforautistickids.SettingsActivity">

    <Button
        android:id="@+id/resetGame"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/reset_button"
        android:onClick="resetGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/musicToggle"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/music_toggle_button"
        android:onClick="toggleMusic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetGame" />

    <Button
        android:id="@+id/logout"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/logout_button"
        android:onClick="logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicToggle" />

    <Button
        android:id="@+id/about"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/about_button"
        android:onClick="aboutApp"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout" />
</android.support.constraint.ConstraintLayout>
