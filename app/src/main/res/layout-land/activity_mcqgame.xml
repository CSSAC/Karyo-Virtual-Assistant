<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg_blue"
    tools:context="org.cssac.karyovirtualassistantforautistickids.MCQGameActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="119dp"
        android:layout_height="101dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/thumbs_up_gif"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/idOption2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idOption1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/idOption1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/idOption3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idOption2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/prompter3"
        android:layout_width="77dp"
        android:layout_height="93dp"
        android:layout_marginStart="104dp"
        app:layout_constraintStart_toEndOf="@+id/prompter2"
        app:layout_constraintTop_toBottomOf="@+id/idOption3"
        app:srcCompat="@drawable/hand_point" />

    <ImageView
        android:id="@+id/prompter2"
        android:layout_width="77dp"
        android:layout_height="93dp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toEndOf="@+id/prompter1"
        app:layout_constraintTop_toBottomOf="@+id/idOption2"
        app:srcCompat="@drawable/hand_point" />

    <ImageView
        android:id="@+id/prompter1"
        android:layout_width="77dp"
        android:layout_height="93dp"
        android:layout_marginStart="104dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idOption1"
        app:srcCompat="@drawable/hand_point" />
</android.support.constraint.ConstraintLayout>
